# Development Environment Configuration

# Django Settings
ENVIRONMENT=development
DEBUG=true
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
SECRET_KEY=dev-secret-key-not-for-production

# FastAPI Connection Settings
USE_MODEL_API=true
FASTAPI_URL=http://host.docker.internal:8000
FASTAPI_TIMEOUT=10

# CORS Origins (for FastAPI)
CORS_ORIGINS=http://localhost:8080,http://127.0.0.1:8080,http://0.0.0.0:8080

# AWS Lambda Settings (for local testing)
AWS_LWA_PORT=8000

# Database
DATABASE_URL=sqlite:///db.sqlite3

# Logging
LOG_LEVEL=DEBUG